" .vimrc

set number
set cursorline
set background=dark
syntax on
colorscheme ians

" tab options
set ts=4
set sw=4
set expandtab
set cindent

" search incrementally
set incsearch

" make vim highlight words
set hlsearch

" change leader
let mapleader=" "

" normal mode key mapping (toggle line numbers)
nmap <Leader>n :set number!<CR>


ab tumw The University of Mary Washington


